<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TopGames</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP2.styles.css" asp-append-version="true" />
</head>
<body class="h-100">
    <div style="background-image:url(../assets/backgroundImg.png); background-size: cover; background-repeat: no-repeat">
        <div class="bg-dark bg-opacity-25">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand text-primary" asp-controller="Home" asp-action="Index"><i class="bi bi-controller fs-5"></i></a>
                        <a class="navbar-brand text-primary" asp-controller="Home" asp-action="Index">TopGames</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mb-2 mb-lg-0 w-100 justify-content-between">
                                <li class="nav-item">
                                    <a class="nav-link text-primary" aria-current="page" asp-controller="Home" asp-action="Index">Accueil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-controller="Search" asp-action="Index">Jeux</a>
                                </li>
                                <li class="nav-item w-50 m-auto">

                                    <form asp-controller="Search" asp-action="Index" asp-route-t="g" class="d-flex input-group">
                                        <input name="q" type="text" class="form-control bg-primary text-secondary border-0" placeholder="Rechercher" aria-label="Search" aria-describedby="search-addon" />
                                        <button class="input-group-text border-0 bg-primary rounded-end" id="search-addon">
                                            <i class="bi bi-search text-secondary"></i>
                                        </button>
                                    </form>

                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary" aria-current="page" asp-controller="Search" asp-action="Index" asp-route-t="u" asp-route-q="">Favoris</a>
                                </li>
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <a class="nav-link dropdown-toggle text-primary" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                            @TempData["username"]
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                            <li><h6 class="dropdown-item">@TempData["role"]</h6></li>
                                            <li><a class="dropdown-item disconnect-link" href="#" id="disconnect">Déconnexion</a></li>
                                        </ul>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            <div class="container h-100">
                <main role="main">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted bg-dark">
                <div class="container-fluid">
                    &copy; 2023 - TopGames
                </div>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)
        </div>
    </div>
</body>
</html>
